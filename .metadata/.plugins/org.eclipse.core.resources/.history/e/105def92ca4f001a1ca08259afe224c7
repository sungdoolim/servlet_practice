package lab.web.servlet;

import java.io.IOException;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import javax.naming.Context;
import javax.naming.InitialContext;
import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.sql.DataSource;

import Ex.Employee0124;

/**
 * Servlet implementation class JdbcServlet0125
 */
@WebServlet("/JdbcServlet0125")
public class JdbcServlet0125 extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public JdbcServlet0125() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub

		Connection con =null;
		Employee0124 emp = new Employee0124();
		try {
			con=getConnection();
			System.out.println(con);

			String empnoStr= request.getParameter("empno");
			int empno=101;
			if(empnoStr!=null) {
				empno=Integer.parseInt(empnoStr);
			}
			String sql="select* from employees where employee_id=?";
			PreparedStatement stmt=con.prepareStatement(sql);
			stmt.setInt(1,empno);
			ResultSet rs =stmt.executeQuery();
			if(rs.next()) {
				emp.setEmployeeId(rs.getInt("employee_id"));
				emp.setFirstName(rs.getString("first_name"));
				emp.setLastName(rs.getString("last_name"));
				emp.setSalary(rs.getInt("salary"));
				emp.setDepartmentId(rs.getInt("department_id"));
				emp.setManagerId(rs.getInt("manager_id"));
				request.setAttribute("emp", emp);
			}else {
				request.setAttribute("nodata", "NO DATA");
			}
			
			RequestDispatcher disp = request.getRequestDispatcher("/JdbcExample0124.jsp");
			disp.forward(request,response);
			
			
		
		} catch (Exception e) {
			// TODO: handle exception
			e.printStackTrace();
		}
		
		finally {
			
		}
		
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		//doGet(request, response);
	}
	
	
	
	private Connection getConnection() {
		DataSource ds=null;
		Connection con =null;
		try {
			Context ctx = new InitialContext();
			ds=(DataSource)ctx.lookup("java:comp/env/jdbc/Oracle");
			try {
				con=ds.getConnection();
			} catch (Exception e) {e.printStackTrace();
				// TODO: handle exception
			}
		} catch (Exception e) {
			// TODO: handle exception
			e.printStackTrace();
		}return con;
	}

}
